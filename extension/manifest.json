{
  "manifest_version": 3,
  "name": "Verifis - Grok Live Search Fact Checker",
  "version": "2.0.0",
  "description": "AI-powered fact-checking with Grok Live Search and credibility scoring",
  
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Verifis Fact Checker"
  },
  
  "options_page": "options.html",
  
  "commands": {
    "fact-check-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Fact-check selected text"
    }
  }
}